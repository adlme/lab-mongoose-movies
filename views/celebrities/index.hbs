<h2>Celebs</h2>

{{#each celebrities}}
    <p>{{name}}</p>
    <a class = "button" href="/celebrities/details/{{_id}}">View Celebrity</a>
    <form action="/celebrities/{{_id}}/delete" method="POST">
        <button type="submit">Delete</button>
    </form>
    <form action="/celebrities/{{_id}}" method="GET">
        <button type="submit">Edit</button>
    </form>
{{/each}}

<a href="/celebrities/new">Create celebrity</a>